-- fn match
def map : 'a 'b. ('a -> 'b) -> ['a] -> ['b]
  | f [] = []
  | f (x :: xs) = f x :: map f xs

def map : ('a -> 'b) -> ['a] -> ['b]
  | f [] = []
  | f (x :: xs) = f x :: map f xs

def map
  | f [] = []
  | f (x :: xs) = f x :: map f xs

def map 'a 'b (f : 'a -> 'b) (xs : ['a]) : ['b] = 
  match xs with
  | [] -> []
  | (x::xs) -> f x :: map f xs

def compose 'a 'b 'c 
  (f : 'b -> 'c) 
  (g : 'a -> 'b) 
  : 'a -> 'c = \x -> f (g x)

-- unicode support
def π = 3.14159

def (∘) 'a 'b 'c. ('b -> 'c) -> ('a -> 'b) -> 'a -> 'c
  | f ∘ g = compose f g

