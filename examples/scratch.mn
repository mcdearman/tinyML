-- Impl Blocks and Methods
data List 'a = Empty | Pair 'a (List 'a)

impl List 'a with
  def map 'b self (f : 'a -> 'b) : List 'b = 
    match self with
    | Empty -> Empty
    | Pair x xs -> Pair (f x) (xs.map f)

  def filter self (f : 'a -> Bool) : List 'a =
    match self with
    | Empty -> Empty
    | Pair x xs -> 
      if f x then Pair x (xs.filter f)
      else xs.filter f
end